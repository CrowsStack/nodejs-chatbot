{
  "name": "crowsstack-chatbot",
  "version": "1.0.0",
  "description": "CrowsStack AI-powered chatbot",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "vercel-build": "npm install && mkdir -p public && cp -r public/* .",
    "build": "npm run vercel-build",
    "serve": "npx http-server public -p 5000 & node server.js"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1"
  }
}
